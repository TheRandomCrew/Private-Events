<h1>Events</h1>

<%= link_to 'New Event', new_event_path %>

<div class="py-5 px-3 bg-info mb-3">
  <h2>Today event </h2>
  <table class="table table-stripped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Location</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @today_events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>


<div class="py-5 px-3 bg-primary mb-3">
  <h2>Upcoming Events</h2>

  <table class="table table-stripped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Location</th>
        <th>Description</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @upcoming_events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Attend', attend_path(event) %></td>
        <td><p><%= event.comments.count %> <%= (event.comments.count) == 1 ? 'Comment' : 'Comments'%></p></td>

        <% if event.creator_id == @current_user.id %>
          <td><%= button_to 'Destroy', event, method: :delete, data: { confirm: "Are you sure to delete this event?" }, class: 'btn btn-danger'%></td>
        <% end %>
        <td><p><%= event.likes.count %> <%= (event.likes.count) == 1 ? 'Like' : 'Likes'%></p></td>
        <td>  <p><%= event.participates.count %> <%= (event.participates.count) == 1 ? "participate" : "participates" %></p></td>


      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="py-5 px-3 bg-warning mb-3">
  <h2>Past Events</h2>
  <table class="table table-stripped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Location</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @prev_events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>